<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:weightSum="3"
    tools:context="com.gzmachado.drawlinechartexample.MainActivity">

    <com.gzmachado.drawlinechartexample.ViewLine
        android:id="@+id/viewline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/backLinearArea"
        />

    <com.gzmachado.drawlinechartexample.ViewChart
        android:id="@+id/viewchart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/backChartArea"
        />

</LinearLayout>
